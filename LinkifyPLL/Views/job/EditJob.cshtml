@using LinkifyDAL.Enums
@{
    ViewData["Title"] = "Edit Job Posting";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}
@model EditJobMV

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Job Posting</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #a855f7 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            border-radius: 24px;
            overflow: hidden;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
        }

        .header {
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            padding: 40px 40px 60px;
            color: white;
            text-align: center;
            position: relative;
        }

            .header h1 {
                font-size: 2.5rem;
                font-weight: 700;
                margin-bottom: 8px;
                letter-spacing: -0.025em;
            }

            .header p {
                font-size: 1.1rem;
                opacity: 0.9;
                font-weight: 400;
            }

        .form-container {
            padding: 40px;
            background: #fafafa;
            position: relative;
            margin-top: -40px;
            border-radius: 24px 24px 0 0;
        }

        .form-section {
            background: white;
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 24px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        }

        .section-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: #374151;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .form-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 20px;
        }

        .form-group {
            display: flex;
            flex-direction: column;
        }

            .form-group.full-width {
                grid-column: 1 / -1;
            }

            .form-group label {
                font-size: 0.875rem;
                font-weight: 500;
                color: #374151;
                margin-bottom: 6px;
            }

            .form-group input,
            .form-group select,
            .form-group textarea {
                padding: 12px 16px;
                border: 1.5px solid #e5e7eb;
                border-radius: 12px;
                font-size: 1rem;
                transition: all 0.2s;
                background: white;
                color: #374151;
            }

                .form-group input:focus,
                .form-group select:focus,
                .form-group textarea:focus {
                    outline: none;
                    border-color: #6366f1;
                    box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
                }

            .form-group textarea {
                min-height: 120px;
                resize: vertical;
            }

        .job-type-buttons {
            display: flex;
            gap: 8px;
            flex-wrap: wrap;
            margin-top: 8px;
        }

        .type-button {
            padding: 8px 16px;
            border: 1.5px solid #e5e7eb;
            border-radius: 20px;
            background: white;
            color: #6b7280;
            font-size: 0.875rem;
            cursor: pointer;
            transition: all 0.2s;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .type-button input[type="radio"] {
                display: none;
            }

            .type-button.active {
                background: #6366f1;
                color: white;
                border-color: #6366f1;
            }

            .type-button:hover:not(.active) {
                border-color: #6366f1;
                color: #6366f1;
            }

        .presence-buttons {
            display: flex;
            gap: 8px;
            flex-wrap: wrap;
            margin-top: 8px;
        }

        .presence-button {
            padding: 8px 16px;
            border: 1.5px solid #e5e7eb;
            border-radius: 20px;
            background: white;
            color: #6b7280;
            font-size: 0.875rem;
            cursor: pointer;
            transition: all 0.2s;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .presence-button input[type="radio"] {
                display: none;
            }

            .presence-button.active {
                background: #6366f1;
                color: white;
                border-color: #6366f1;
            }

            .presence-button:hover:not(.active) {
                border-color: #6366f1;
                color: #6366f1;
            }

        .checkbox-group {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-top: 20px;
            padding: 16px;
            background: #f9fafb;
            border-radius: 12px;
            border: 1.5px solid #e5e7eb;
        }

            .checkbox-group input[type="checkbox"] {
                width: 18px;
                height: 18px;
                accent-color: #6366f1;
            }

            .checkbox-group label {
                margin: 0;
                font-weight: 500;
                color: #374151;
            }

        .button-group {
            display: flex;
            gap: 12px;
            justify-content: center;
            margin-top: 32px;
        }

        .btn {
            padding: 14px 32px;
            border: none;
            border-radius: 50px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .btn-primary {
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            color: white;
            box-shadow: 0 4px 14px rgba(99, 102, 241, 0.4);
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(99, 102, 241, 0.5);
            }

        .btn-secondary {
            background: #f3f4f6;
            color: #6b7280;
            border: 1.5px solid #e5e7eb;
        }

            .btn-secondary:hover {
                background: #e5e7eb;
                color: #374151;
            }

        .btn-danger {
            background: #ef4444;
            color: white;
            box-shadow: 0 4px 14px rgba(239, 68, 68, 0.4);
        }

            .btn-danger:hover {
                background: #dc2626;
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(239, 68, 68, 0.5);
            }

        .job-status {
            background: #f0fdf4;
            border: 1px solid #bbf7d0;
            border-radius: 12px;
            padding: 12px 16px;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 0.875rem;
        }

            .job-status.active {
                background: #f0fdf4;
                border-color: #bbf7d0;
                color: #166534;
            }

            .job-status.inactive {
                background: #fef2f2;
                border-color: #fecaca;
                color: #991b1b;
            }

        .text-danger {
            color: #ef4444;
            font-size: 0.875rem;
            margin-top: 4px;
        }

        @@media (max-width: 768px) {
            .form-grid

        {
            grid-template-columns: 1fr;
        }

        .button-group {
            flex-direction: column;
        }

        .job-type-buttons,
        .presence-buttons {
            justify-content: center;
        }

        }
    </style>
</head>
<body>
    <partial name="_NavPartial" />

    <div class="container">
        <div class="header">
            <h1>Edit Job</h1>
            <p>Update your job posting details</p>
        </div>

        <div class="form-container">
            <div id="jobStatus" class="job-status @(Model.IsActive ? "active" : "inactive")">
                @if (Model.IsActive)
                {
                    <i class="fas fa-circle-check"></i>
                    <span>This job is currently active and published</span>
                }
                else
                {
                    <i class="fas fa-circle-pause"></i>
                    <span>This job is currently inactive</span>
                }
            </div>

            <form id="jobForm" asp-action="EditJob" asp-controller="Job" method="post">
                @Html.HiddenFor(m => m.Id)

                <!-- Basic Information -->
                <div class="form-section">
                    <div class="section-title">
                        <i class="fas fa-info-circle" style="color: #6366f1;"></i>
                        Basic Information
                    </div>

                    <div class="form-grid">
                        <div class="form-group">
                            <label asp-for="Title">Job Title</label>
                            <input asp-for="Title" type="text" placeholder="e.g., Senior Frontend Engineer" required>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Company">Company</label>
                            <input asp-for="Company" type="text" placeholder="e.g., TechCorp Inc." required>
                            <span asp-validation-for="Company" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Location">Location</label>
                            <input asp-for="Location" type="text" placeholder="e.g., San Francisco, CA">
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ExpiresOn">Application Deadline</label>
                            <input asp-for="ExpiresOn" type="date">
                            <span asp-validation-for="ExpiresOn" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group full-width">
                        <label asp-for="Description">Job Description</label>
                        <textarea asp-for="Description" placeholder="Describe the role, responsibilities, and requirements..." required></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <!-- Job Details -->
                <div class="form-section">
                    <div class="section-title">
                        <i class="fas fa-cogs" style="color: #6366f1;"></i>
                        Job Details
                    </div>

                    <div class="form-group">
                        <label>Job Type</label>
                        <div class="job-type-buttons">
                            <label class="type-button @(Model.Type == JobTypes.FullTime ? "active" : "")">
                                <input type="radio" asp-for="Type" value="FullTime" />
                                Full-time
                            </label>
                            <label class="type-button @(Model.Type == JobTypes.PartTime ? "active" : "")">
                                <input type="radio" asp-for="Type" value="PartTime" />
                                Part-time
                            </label>
                            <label class="type-button @(Model.Type == JobTypes.Contract ? "active" : "")">
                                <input type="radio" asp-for="Type" value="Contract" />
                                Contract
                            </label>
                            <label class="type-button @(Model.Type == JobTypes.Internship ? "active" : "")">
                                <input type="radio" asp-for="Type" value="Internship" />
                                Internship
                            </label>
                        </div>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>Work Arrangement</label>
                        <div class="presence-buttons">
                            <label class="presence-button @(Model.Presence == JobPresence.Onsite ? "active" : "")">
                                <input type="radio" asp-for="Presence" value="Onsite" />
                                Onsite
                            </label>
                            <label class="presence-button @(Model.Presence == JobPresence.Hybrid ? "active" : "")">
                                <input type="radio" asp-for="Presence" value="Hybrid" />
                                Hybrid
                            </label>
                            <label class="presence-button @(Model.Presence == JobPresence.Remote ? "active" : "")">
                                <input type="radio" asp-for="Presence" value="Remote" />
                                Remote
                            </label>
                        </div>
                        <span asp-validation-for="Presence" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="SalaryRange">Salary Range</label>
                        <input asp-for="SalaryRange" type="text" placeholder="e.g., $120K-$160K" style="text-align: center;">
                        <span asp-validation-for="SalaryRange" class="text-danger"></span>
                    </div>
                </div>

                <!-- Job Settings -->
                <div class="form-section">
                    <div class="section-title">
                        <i class="fas fa-cog" style="color: #6366f1;"></i>
                        Job Settings
                    </div>

                    <div class="checkbox-group">
                        <input asp-for="IsActive" type="checkbox" id="isActive">
                        <label asp-for="IsActive">Job is active and published</label>
                    </div>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>

                <div class="button-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i>
                        Update Job
                    </button>
                    <a asp-action="JobList" asp-controller="Job" class="btn btn-secondary">
                        <i class="fas fa-times"></i>
                        Cancel
                    </a>
                    <form asp-action="DeleteJob" asp-controller="Job" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="button" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this job? This action cannot be undone.');">
                        <i class="fas fa-trash"></i>
                        Delete Job
                        </button>
                    </form>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <script>
        <partial name="_ValidationScriptsPartial" />

        // Handle radio button styling
        document.querySelectorAll('input[name="Type"]').forEach(radio => {
            radio.addEventListener('change', function() {
                document.querySelectorAll('.type-button').forEach(btn => btn.classList.remove('active'));
                this.closest('.type-button').classList.add('active');
            });
        });

        document.querySelectorAll('input[name="Presence"]').forEach(radio => {
            radio.addEventListener('change', function() {
                document.querySelectorAll('.presence-button').forEach(btn => btn.classList.remove('active'));
                this.closest('.presence-button').classList.add('active');
            });
        });

        // Active checkbox change handler
        document.getElementById('isActive').addEventListener('change', function() {
            const statusEl = document.getElementById('jobStatus');
            if (this.checked) {
                statusEl.className = 'job-status active';
                statusEl.innerHTML = '<i class="fas fa-circle-check"></i><span>This job is currently active and published</span>';
            } else {
                statusEl.className = 'job-status inactive';
                statusEl.innerHTML = '<i class="fas fa-circle-pause"></i><span>This job is currently inactive</span>';
            }
        });

        // Set minimum date to today
        const expiresOnField = document.querySelector('input[name="ExpiresOn"]');
        if (expiresOnField) {
            expiresOnField.min = new Date().toISOString().split('T')[0];
        }

        // Form submission with loading state
        document.getElementById('jobForm').addEventListener('submit', function(e) {
            const submitBtn = this.querySelector('.btn-primary');
            const originalContent = submitBtn.innerHTML;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Updating...';
            submitBtn.disabled = true;

            // Re-enable button after a short delay if validation fails
            setTimeout(() => {
                if (submitBtn.disabled) {
                    submitBtn.innerHTML = originalContent;
                    submitBtn.disabled = false;
                }
            }, 3000);
        });
    </script>
</body>
</html>