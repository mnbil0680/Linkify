            height: 50px;
            border-radius: 12px;
            background: linear-gradient(45deg, #667eea, #764ba2);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 20px;
            font-weight: bold;
            flex-shrink: 0;
        }

        .job-title {
            font-size: 1.4rem;
            font-weight: 700;
            color: #333;
            margin-bottom: 5px;
        }

        .job-company {
            color: #666;
            font-size: 0.9rem;
            font-weight: 500;
        }

        .job-meta {
            display: flex;
            gap: 15px;
            margin-bottom: 20px;
            flex-wrap: wrap;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 5px;
            color: #666;
            font-size: 0.9rem;
        }

        .job-description {
            color: #666;
            margin-bottom: 25px;
            line-height: 1.6;
        }

        .job-tags {
            display: flex;
            gap: 8px;
            margin-bottom: 25px;
            flex-wrap: wrap;
        }

        .tag {
            padding: 6px 12px;
            background: rgba(102, 126, 234, 0.1);
            color: #667eea;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 500;
        }

        .job-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .job-salary {
            font-weight: 700;
            color: #333;
            font-size: 1.1rem;
        }

        .job-buttons {
            display: flex;
            gap: 10px;
            width: 100%;
        }

        .apply-btn, .save-btn {
            flex: 1;
            padding: 12px 20px;
            background: linear-gradient(45deg, #667eea, #764ba2);
            color: white;
            border: none;
            border-radius: 25px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            font-size: 0.9rem;
        }

        .apply-btn:hover, .save-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
        }

        .apply-btn::before, .save-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            transition: left 0.5s ease;
        }

        .apply-btn:hover::before, .save-btn:hover::before {
            left: 100%;
        }

        .save-btn.saved {
            background: linear-gradient(45deg, #10b981, #059669);
        }

        .save-btn.saved:hover {
            box-shadow: 0 10px 25px rgba(16, 185, 129, 0.4);
        }

        /* Animations */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .job-card {
            opacity: 0;
            animation: fadeInUp 0.6s ease forwards;
        }

        .job-card:nth-child(1) { animation-delay: 0.1s; }
        .job-card:nth-child(2) { animation-delay: 0.2s; }
        .job-card:nth-child(3) { animation-delay: 0.3s; }
        .job-card:nth-child(4) { animation-delay: 0.4s; }
        .job-card:nth-child(5) { animation-delay: 0.5s; }
        .job-card:nth-child(6) { animation-delay: 0.6s; }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .jobs-grid {
                grid-template-columns: 1fr;
            }
            
            .filter-bar {
                justify-content: flex-start;
                overflow-x: auto;
                padding-bottom: 10px;
            }
            
            .nav {
                display: none;
            }

            .job-buttons {
                flex-direction: column;
            }

            .apply-btn, .save-btn {
                width: 100%;
            }
        }
    </style>
</head>
