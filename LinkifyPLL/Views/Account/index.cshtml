            --glass-border: rgba(255, 255, 255, 0.1);
        }

        .main-container{
            margin-top: 80px;
            max-width: 1200px;
            margin-left: auto;
            margin-right: auto;
            gap: 20px;
            display:flex;
            flex-direction:column;
            padding: 20px;
            min-height: calc(100vh - 80px);
        }

            .profile-header {
