            }

            .header-content {
                display: grid;
                grid-template-columns: auto 1fr auto;
                gap: 30px;
                align-items: center;
                position: relative;
                z-index: 1;
            }


            .profile-avatar {
                width: 120px;
                height: 120px;
                border-radius: 50%;
                border: 4px solid rgba(255, 255, 255, 0.3);
                object-fit: cover;
                box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
            }

            .profile-info h1 {
                color: white;
                font-size: 2.5rem;
                font-weight: 700;
                margin-bottom: 8px;
                text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
            }

            .profile-info .title {
                color: rgba(255, 255, 255, 0.9);
                font-size: 1.3rem;
                margin-bottom: 12px;
            }

            .profile-info .company {
                color: rgba(255, 255, 255, 0.8);
                font-size: 1.1rem;
                margin-bottom: 15px;
            }

            .status-badge {
                display: inline-flex;
                align-items: center;
                gap: 8px;
                background: rgba(255, 255, 255, 0.2);
                backdrop-filter: var(--backdrop-blur);
                padding: 8px 16px;
                border-radius: 25px;
                color: white;
                font-size: 0.9rem;
                border: 1px solid rgba(255, 255, 255, 0.3);
            }

            .status-indicator {
                width: 8px;
                height: 8px;
                border-radius: 50%;
                background: var(--accent-green);
                animation: pulse 2s infinite;
            }

    @@keyframes pulse {
                0%, 100% { opacity: 1; }
                50% { opacity: 0.5; }
            }

            .profile-stats {
                display: flex;
                flex-direction: column;
                gap: 15px;
            }

            .stat-item {
                text-align: center;
                color: white;
            }

            .stat-number {
                font-size: 1.8rem;
                font-weight: 700;
                display: block;
            }

            .stat-label {
                font-size: 0.85rem;
                opacity: 0.8;
            }

            .theme-toggle {
                position: fixed;
                top: 20px;
                right: 20px;
                z-index: 1000;
                background: var(--glass-bg);
                backdrop-filter: var(--backdrop-blur);
                border: 1px solid var(--glass-border);
                border-radius: 50%;
                width: 50px;
                height: 50px;
                display: flex;
                align-items: center;
                justify-content: center;
                cursor: pointer;
                transition: all 0.3s ease;
                color: var(--text-dark);
            }

            .theme-toggle:hover {
                transform: scale(1.1);
                box-shadow: var(--shadow-hover);
            }

            .main-content {
                display: grid;
                grid-template-columns: 1fr 350px;
                gap: 30px;
            }

         

        .tab-content {
                background: var(--glass-bg);
                backdrop-filter: var(--backdrop-blur);
                border: 1px solid var(--glass-border);
                border-radius: 16px;
                padding: 25px;
                margin-bottom: 25px;
                box-shadow: var(--shadow);
                transition: all 0.3s ease;
            }

            .tab-content:hover {
                transform: translateY(-2px);
                box-shadow: var(--shadow-hover);
            }

            .section-title {
                font-size: 1.4rem;
                font-weight: 600;
                color: var(--primary-dark);
                margin-bottom: 20px;
                display: flex;
                align-items: center;
                gap: 12px;
            }

            .section-title i {
                color: var(--primary-blue);
                font-size: 1.2rem;
            }

            .bio {
                font-size: 1.1rem;
                line-height: 1.7;
                color: var(--text-light);
                margin-bottom: 20px;
            }

            .social-links {
                display: flex;
                flex-wrap: wrap;
                gap: 12px;
            }

            .social-link {
                display: inline-flex;
                align-items: center;
                gap: 8px;
                padding: 8px 16px;
                background: linear-gradient(135deg, var(--primary-blue), var(--accent-blue));
                color: white;
                text-decoration: none;
                border-radius: 25px;
                font-size: 0.9rem;
                transition: all 0.3s ease;
            }

            .social-link:hover {
                transform: translateY(-2px);
                box-shadow: var(--shadow-hover);
            }

            .experience-item, .education-item, .project-item {
                border-left: 4px solid var(--primary-blue);
                padding-left: 20px;
                margin-bottom: 25px;
                position: relative;
            }

            .experience-item::before, .education-item::before, .project-item::before {
                content: '';
                position: absolute;
                left: -8px;
                top: 5px;
                width: 12px;
                height: 12px;
                background: var(--primary-blue);
                border-radius: 50%;
                border: 3px solid var(--background-primary);
            }

            .item-header {
                display: flex;
                justify-content: space-between;
                align-items: flex-start;
                margin-bottom: 10px;
            }

            .item-title {
                font-size: 1.2rem;
                font-weight: 600;
                color: var(--primary-dark);
            }

            .item-company {
                color: var(--primary-blue);
                font-weight: 500;
                margin-bottom: 5px;
            }

            .item-date {
                color: var(--dark-gray);
                font-size: 0.9rem;
                font-weight: 500;
            }

            .current-badge {
                background: var(--accent-green);
                color: white;
                padding: 4px 12px;
                border-radius: 12px;
                font-size: 0.8rem;
                font-weight: 500;
            }

            .skills-grid {
                display: grid;
                grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
                gap: 15px;
            }

            .skill-item {
                background: var(--background-secondary);
                padding: 15px;
                border-radius: 12px;
                border: 1px solid var(--border-light);
            }

            .skill-header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 10px;
            }

            .skill-name {
                font-weight: 600;
                color: var(--primary-dark);
            }

            .skill-level {
                font-size: 0.85rem;
                color: var(--dark-gray);
            }

            .skill-bar {
                height: 6px;
                background: var(--medium-gray);
                border-radius: 3px;
                overflow: hidden;
            }

            .skill-progress {
                height: 100%;
                background: linear-gradient(90deg, var(--primary-blue), var(--accent-blue));
                border-radius: 3px;
                transition: width 0.8s ease;
            }

            .endorsement-count {
                font-size: 0.8rem;
                color: var(--accent-green);
                margin-top: 5px;
            }

            .sidebar {
                display: flex;
                flex-direction: column;
                gap: 25px;
            }

            .contact-info {
                display: flex;
                flex-direction: column;
                gap: 12px;
            }

            .contact-item {
                display: flex;
                align-items: center;
                gap: 12px;
                color: var(--text-light);
            }

            .contact-item i {
                color: var(--primary-blue);
                width: 20px;
            }

            .preferences-list {
                display: flex;
                flex-direction: column;
                gap: 8px;
            }

            .preference-item {
                display: flex;
                align-items: center;
                gap: 10px;
                padding: 8px;
                background: var(--background-secondary);
                border-radius: 8px;
            }

            .preference-icon {
                color: var(--accent-green);
            }

            .tags {
                display: flex;
                flex-wrap: wrap;
                gap: 8px;
            }

            .tag {
                background: linear-gradient(135deg, var(--accent-orange), var(--accent-pink));
                color: white;
                padding: 6px 12px;
                border-radius: 15px;
                font-size: 0.85rem;
                font-weight: 500;
            }

            .recommendation-item {
                background: var(--background-secondary);
                padding: 20px;
                border-radius: 12px;
                margin-bottom: 15px;
                border-left: 4px solid var(--accent-green);
            }

            .recommender-info {
                display: flex;
                align-items: center;
                gap: 12px;
                margin-bottom: 12px;
            }

            .recommender-avatar {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                object-fit: cover;
            }

            .rating {
                display: flex;
                gap: 2px;
                margin-top: 8px;
            }

            .star {
                color: var(--primary-yellow);
            }

    @@media (max-width: 1200px) {
                .main-content {
                    grid-template-columns: 1fr;
                }

                .sidebar {
                    order: -1;
                }
            }

    @@media (max-width: 768px) {
                .header-content {
                    grid-template-columns: 1fr;
                    text-align: center;
                    gap: 20px;
                }

                .profile-info h1 {
                    font-size: 2rem;
                }

                .container {
                    padding: 15px;
                }
            }


            /* /////////////////// */
            /* Tabs */
            /* /////////////////// */
        /* Enhanced Tab Styling */
        .tabs {
            display: flex;
            flex-wrap: wrap;
            gap: 5px;
            margin-top: 20px;
            border-bottom: 2px solid var(--border-light);
            padding-bottom: 0;
        }

        .tab {
            padding: 12px 20px;
            background: var(--glass-bg);
            backdrop-filter: var(--backdrop-blur);
            border: 1px solid var(--glass-border);
            border-bottom: none;
            border-radius: 12px 12px 0 0;
            cursor: pointer;
            font-size: 0.95rem;
            font-weight: 500;
            color: var(--text-light);
            transition: all 0.3s ease;
            white-space: nowrap;
            position: relative;
            overflow: hidden;
        }

            .tab::before {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 100%;
                height: 3px;
                background: linear-gradient(135deg, var(--primary-blue), var(--accent-purple));
                transform: scaleX(0);
                transition: transform 0.3s ease;
            }

            .tab.active {
                color: var(--primary-blue);
                background: var(--background-primary);
                border-color: var(--primary-blue);
                box-shadow: var(--shadow);
                transform: translateY(-2px);
            }

                .tab.active::before {
                    transform: scaleX(1);
                }

            .tab:hover:not(.active) {
                color: var(--primary-blue);
                background: var(--background-secondary);
                transform: translateY(-1px);
                box-shadow: var(--shadow-hover);
            }

                .tab:hover:not(.active)::before {
                    transform: scaleX(0.5);
                }

        /* Mobile responsiveness for tabs */
        @@media (max-width: 768px) {
            .tabs

        {
            flex-direction: column;
            gap: 8px;
            border-bottom: none;
        }

        .tab {
            border-radius: 8px;
            text-align: center;
            font-size: 0.9rem;
            padding: 10px 15px;
        }

            .tab::before {
                height: 2px;
            }

        }

        /* Tab content styling */
        .tab-content {
            display: none;
            animation: fadeInUp 0.3s ease;
        }

            .tab-content.active {
                display: block;
            }

        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

            .tab:hover {
                color: #2980b9;
            }

        .tab-content {
            display: none;
        }

            .tab-content.active {
                display: block;
            }



    </style>
}
