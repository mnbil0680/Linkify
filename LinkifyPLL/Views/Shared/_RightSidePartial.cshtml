@* Views/Shared/_RightSidePartial.cshtml *@
@model RightSide

<aside class="right-sidebar">
    <!-- People You May Know Widget -->
    <div class="widget">
        <h3 class="widget-title">
            <i class="fas fa-user-plus"></i>
            <a href="/Home/PeopleYouMayKnow">
                People You May Know
            </a>
        </h3>

        @if (Model.Connections != null && Model.Connections.Any())
        {
            foreach (var c in Model.Connections)
            {
                <div class="suggestion-item">
                    <div class="suggestion-avatar">
                        @if (!string.IsNullOrEmpty(c.ImgPath))
                        {
                            <img src="@c.ImgPath" alt="@c.Name" style="width: 40px; height: 40px; border-radius: 50%;" />
                        }
                        else
                        {
                            <!-- Show initials if no image -->
                            @c.Name.Substring(0, 1).ToUpper()
                        }
                    </div>
                    <div style="flex: 1">
                        <h4>@c.Name</h4>
                        <p>@c.Title</p>
                    </div>
                   
                </div>
            }
        }
        else
        {
            <p>No suggestions available</p>
        }

        <a href="/Home/PeopleYouMayKnow" class="widget-action">
            <i class="fas fa-users"></i>
            View All Suggestions
        </a>
    </div>

    <!-- Job Recommendations Widget -->
    <div class="widget">
        <h3 class="widget-title">
            <i class="fas fa-briefcase"></i>
            Job Recommendations
        </h3>

        @if (Model.Jobs != null && Model.Jobs.Any())
        {
            foreach (var job in Model.Jobs)
            {
                <div class="job-item">
                    <h4 class="job-title">@job.Title</h4>
                    <p class="job-company">@job.Company</p>
                    <div class="job-details">
                        <i class="fas fa-map-marker-alt"></i>
                        <span>@job.Location • @job.Salary</span>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No jobs available</p>
        }

        <a href="/Job/FindJobs" class="widget-action">
            <i class="fas fa-search"></i>
            Browse All Jobs
        </a>
    </div>
</aside>
