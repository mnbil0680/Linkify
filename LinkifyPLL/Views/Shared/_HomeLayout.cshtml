    <meta name="twitter:title" content="ProConnect - Professional Network">
    <meta name="twitter:description" content="Connect with professionals, discover opportunities, and grow your career">
    <meta name="twitter:image" content="/images/twitter-image.jpg">

    <title>Linkify</title>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

   
   

    <!-- Stylesheets -->
    <link href="~/css/Home/all.min.css">
    <link href="~/css/Home/style.css" rel="stylesheet">
    <link href="~/css/Home/style2.css" rel="stylesheet">
    <link href="~/css/Nav.css" rel="stylesheet">
    

    

    <!-- Preload Critical Resources -->
    <link rel="preload" href="~/css/Home/style.css" as="style">
    <link rel="preload" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" as="style">
</head>


<body>


    <partial name="_NavPartial" />


    <!-- Main Container -->
    <a class="main-container">

        <!-- Left Sidebar -->
        <aside class="left-sidebar" role="complementary" aria-label="Navigation menu">
            <!-- User Quick Stats -->
            <div class="user-stats-card">
                <div class="stats-header">
                    <img src="@Model.ImgPath" alt="@Model.Name" class="user-avatar">
                    <div class="user-info">
                        <h3>@Model.Name</h3>
                        <p>@Model.Email</p>
                    </div>
                </div>
                <div class="stats-grid">
                    <div class="stat-item">
                        <span class="stat-number">@Model.ConnectionsCount</span>
                        <span class="stat-label">Connections</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number">@Model.PostsCount</span>
                        <span class="stat-label">Posts</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number">@Model.ViewsCount</span>
                        <span class="stat-label">Views</span>
                    </div>
                </div>
            </div>

            <div class="sidebar-section">
                <h3 class="sidebar-title">
                    <i class="fas fa-users"></i>
                    Network
                </h3>
                <a asp-controller="Home" asp-action="MyConnections" class="sidebar-item interactive-card" style="display:block">
                    <i class="fas fa-user-friends sidebar-icon"></i>
                    <span>My Connections</span>
                    <span class="item-count">@Model.ConnectionsCount</span>
                </a>

                <a asp-controller="Home" asp-action="PeopleYouMayKnow" class="sidebar-item interactive-card" style="display:block">
                    <i class="fas fa-users sidebar-icon"></i>
                    <span>Find People</span>
                    <i class="fas fa-external-link-alt item-external"></i>
                </a>
                <a asp-controller="Home" asp-action="Invitations" class="sidebar-item interactive-card" style="display:block">
                    <i class="fas fa-user-plus sidebar-icon"></i>
                    <span>Invitations</span>
                    <span class="item-count new">@Model.InvitationCount</span>
                </a>
                <a asp-action="" asp-controller="" class="sidebar-item interactive-card" tabindex="0" style="display:block">
                    <i class="fas fa-users-cog sidebar-icon"></i>
                    <span>Manage Network</span>
                </a>
            </div>

            <div class="sidebar-section">
                <h3 class="sidebar-title">
                    <i class="fas fa-briefcase"></i>
                    Career
                </h3>
                <a asp-action="" asp-controller="" class="sidebar-item interactive-card" tabindex="0" style="display:block">
                    <i class="fas fa-search sidebar-icon"></i>
                    <span>Find Jobs</span>
                    <span class="item-badge hot">Hot</span>
                </a>
                <a asp-action="" asp-controller="" class="sidebar-item interactive-card" tabindex="0" style="display:block">
                    <i class="fas fa-bookmark sidebar-icon"></i>
                    <span>Saved Jobs</span>
                        <span class="item-count">@Model.SavedJobsCount</span>
                </a>
                <a asp-action="" asp-controller="" class="sidebar-item interactive-card" tabindex="0" style="display:block">
                    <i class="fas fa-chart-line sidebar-icon"></i>
                    <span>Career Insights</span>
                </a>
                <a asp-action="" asp-controller="" class="sidebar-item interactive-card" tabindex="0" style="display:block">
                    <i class="fas fa-file-alt sidebar-icon"></i>
                    <span>Resume Builder</span>
                    <span class="item-badge new">New</span>
                </a>
            </div>

            <div class="sidebar-section">
                <h3 class="sidebar-title">
                    <i class="fas fa-cogs"></i>
                    Skills & Learning
                </h3>
                <a asp-action="" asp-controller="" class="sidebar-item interactive-card" tabindex="0" style="display:block">
                    <i class="fas fa-star sidebar-icon"></i>
                    <span>My Skills</span>
                    <div class="progress-bar small">
                        <div class="progress-fill" style="width: 75%"></div>
                    </div>
                </a>
                <a asp-action="" asp-controller="" class="sidebar-item interactive-card" tabindex="0" style="display:block">
                    <i class="fas fa-graduation-cap sidebar-icon"></i>
                    <span>Learning Paths</span>
                    <span class="item-badge trending">Trending</span>
                </a>
                <a asp-action="" asp-controller="" div class="sidebar-item interactive-card" tabindex="0" style="display:block">
                    <i class="fas fa-certificate sidebar-icon"></i>
                    <span>Certifications</span>
                        <span class="item-count">@Model.CertificationCount</span>
                </a>
                <a asp-action="" asp-controller="" class="sidebar-item interactive-card" tabindex="0" style="display:block">
                    <i class="fas fa-trophy sidebar-icon"></i>
                    <span>Achievements</span>
                </a>
            </div>
        </aside>

        <!-- Main Feed -->
        <main class="main-feed" id="main-content" role="main" aria-label="Main content">

            <!-- Create Post Section -->
