@model List<ManageUser>

@if (Model != null && Model.Any())
{
    <div class="list-group list-group-flush">
        @foreach (var request in Model)
        {
            <div class="list-group-item d-flex align-items-center py-3">
                <!-- Avatar -->
                <div class="flex-shrink-0 me-3">
                    @if (!string.IsNullOrEmpty(request.AvatarUrl))
                    {
                        <img src="@request.AvatarUrl"
                             alt="@request.FullName"
                             class="rounded-circle"
                             style="width: 50px; height: 50px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="rounded-circle bg-warning d-flex align-items-center justify-content-center text-white"
                             style="width: 50px; height: 50px; font-size: 1.2rem;">
                            @request.FullName.First()
                        </div>
                    }
                </div>

                <!-- User Info -->
                <div class="flex-grow-1">
                    <h6 class="mb-1 fw-bold">@request.FullName</h6>
                    @if (request.Since.HasValue)
                    {
                        <small class="text-muted">
                            <i class="fas fa-clock me-1"></i>
                            Requested @request.Since.Value.ToString("MM, dd, yyyy")
                        </small>
                    }
                    <div class="mt-1">
                        <span class="badge bg-warning text-dark">
                            <i class="fas fa-hourglass-half me-1"></i>
                            Pending
                        </span>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex-shrink-0">
                    <div class="d-flex flex-column gap-2">
                        <!-- Accept Button -->
                        <form asp-controller="ManageNetwork" asp-action="AcceptRequest" method="post" style="display:inline;">
                            <input type="hidden" name="userId" value="@request.UserId" />
                            <button type="submit" class="btn btn-success btn-lg w-100" style="min-width: 50px;">
                                <i class="fas fa-check me-2"></i>Accept
                            </button>
                        </form>

                        <!-- Decline Button -->
                        <form asp-controller="ManageNetwork" asp-action="DeclineRequest" method="post" style="display:inline;">
                            <input type="hidden" name="userId" value="@request.UserId" />
                            <button type="submit" class="btn btn-danger btn-lg w-100" style="min-width: 50px;"
                                    onclick="return confirm('Are you sure you want to decline the request from @(request.FullName)?')">
                                <i class="fas fa-times me-2"></i>Decline
                            </button>
                        </form>

                        <!-- View Profile Button -->
                        <a href="/Profile/Details/@request.UserId" class="btn btn-outline-primary btn-lg w-100" style="min-width: 50px;">
                            <i class="fas fa-eye me-2"></i>View Profile
                        </a>
                    </div>
                </div> 
            </div>
            }
    </div>

}
else
{
    <div class="text-center py-5">
        <i class="fas fa-clock fa-3x text-muted mb-3"></i>
        <h5 class="text-muted">No Pending Requests</h5>
        <p class="text-muted">You don't have any pending friend requests at the moment.</p>
    </div>
}

 <script>
    function viewProfile(userId) {
        window.location.href = '/Profile/Details/' + userId;
    }

    function acceptRequest(userId, userName) {
        if (confirm('Accept friend request from ' + userName + '?')) {
            $.post('/ManageNetwork/AcceptRequest', { userId: userId })
                .done(function() {
                    location.reload();
                    // Show success message
                    showNotification('Friend request accepted!', 'success');
                })
                .fail(function() {
                    alert('Failed to accept request. Please try again.');
                });
        }
    }

    function declineRequest(userId, userName) {
        if (confirm('Decline friend request from ' + userName + '?')) {
            $.post('/ManageNetwork/DeclineRequest', { userId: userId })
                .done(function() {
                    location.reload();
                    showNotification('Friend request declined.', 'info');
                })
                .fail(function() {
                    alert('Failed to decline request. Please try again.');
                });
        }
    }

    function showNotification(message, type) {
        // Simple toast notification
        const toast = $('<div class="toast align-items-center text-white bg-' + (type === 'success' ? 'success' : 'primary') + ' border-0" role="alert">')
            .append('<div class="d-flex"><div class="toast-body">' + message + '</div></div>');

        $('body').append(toast);
        const bsToast = new bootstrap.Toast(toast[0]);
        bsToast.show();

        toast.on('hidden.bs.toast', function() {
            $(this).remove();
        });

        $(document).ready(function() {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    }
</script> 