@model AddContactVM
@{
    ViewData["Title"] = "Add Contact";
}
<link rel="stylesheet" href="~/css/contact.css" />

<div class="contact-container">
    <div class="card shadow-sm mt-5">
        <div class="card-header bg-white border-bottom-0 pb-0">
            <h2 class="mb-0">Add More Contact Info</h2>
            <p class="text-muted mb-0">Add a new email or phone number to your profile</p>
        </div>
        <div class="card-body">
            <form asp-controller="Contact" asp-action="AddContact" method="post">
                <div class="mb-3">
                    <label asp-for="Type" class="form-label">Contact Type</label>
                    <select asp-for="Type" class="form-select">
                        <option value="Email">Email</option>
                        <option value="Phone">Phone</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Value" class="form-label">Entry</label>
                    <input asp-for="Value" class="form-control" placeholder="Enter email or phone number" />
                    <span asp-validation-for="Value" class="text-danger small"></span>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-add-contact">
                        <i class="fas fa-plus me-2"></i>Add Contact
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
