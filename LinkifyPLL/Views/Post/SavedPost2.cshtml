@model List<SavedPostMV>

@{
    ViewData["Title"] = "Saved Posts";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}

<style>
    :root {
        --primary-color: #007bff;
        --primary-hover: #0056b3;
        --success-color: #28a745;
        --warning-color: #ffc107;
        --danger-color: #dc3545;
        --info-color: #17a2b8;
        --light-color: #f8f9fa;
        --dark-color: #343a40;
        /* Light theme variables */
        --bg-primary: #ffffff;
        --bg-secondary: #f8f9fa;
        --bg-tertiary: #e9ecef;
        --text-primary: #212529;
        --text-secondary: #6c757d;
        --text-muted: #adb5bd;
        --border-color: #dee2e6;
        --shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        --shadow-hover: 0 4px 16px rgba(0, 0, 0, 0.15);
        --tab-active-bg: #ffffff;
        --tab-inactive-bg: transparent;
        --reaction-bg: #f8f9fa;
        --reaction-hover: #e9ecef;
    }

    [data-theme="dark"] {
        /* Dark theme variables */
        --bg-primary: #1a1a1a;
        --bg-secondary: #2d2d2d;
        --bg-tertiary: #404040;
        --text-primary: #ffffff;
        --text-secondary: #b3b3b3;
        --text-muted: #808080;
        --border-color: #404040;
        --shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
        --shadow-hover: 0 4px 16px rgba(0, 0, 0, 0.4);
        --tab-active-bg: #2d2d2d;
        --tab-inactive-bg: transparent;
        --reaction-bg: #404040;
        --reaction-hover: #4d4d4d;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: var(--bg-secondary);
        color: var(--text-primary);
        line-height: 1.6;
        transition: all 0.3s ease;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    .page-header {
        text-align: center;
        margin-bottom: 30px;
        padding: 20px 0;
    }

    .page-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 10px;
    }

    .page-subtitle {
        color: var(--text-secondary);
        font-size: 1.1rem;
    }

    /* Tabs Styling */
    .tabs-container {
        margin-bottom: 30px;
        border-bottom: 2px solid var(--border-color);
    }

    .tabs {
        display: flex;
        gap: 0;
        background: transparent;
        border-radius: 8px 8px 0 0;
        overflow: hidden;
    }

    .tab {
        flex: 1;
        padding: 15px 25px;
        background: var(--tab-inactive-bg);
        border: none;
        color: var(--text-secondary);
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        border-bottom: 3px solid transparent;
    }

        .tab:hover {
            background: var(--bg-tertiary);
            color: var(--text-primary);
        }

        .tab.active {
            background: var(--tab-active-bg);
            color: var(--primary-color);
            border-bottom-color: var(--primary-color);
        }

    .tab-content {
        display: none;
    }

        .tab-content.active {
            display: block;
            animation: fadeIn 0.3s ease-in-out;
        }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* Post Card Styling */
    .posts-container {
        display: flex;
        flex-direction: column;
        gap: 25px;
    }

    .post-card {
        background: var(--bg-primary);
        border-radius: 12px;
        box-shadow: var(--shadow);
        transition: all 0.3s ease;
        overflow: hidden;
        border: 1px solid var(--border-color);
    }

        .post-card:hover {
            box-shadow: var(--shadow-hover);
            transform: translateY(-2px);
        }

    .post-header {
        padding: 20px;
        border-bottom: 1px solid var(--border-color);
    }

    .post-user-info {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 10px;
    }

    .user-avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid var(--border-color);
    }

    .user-details h4 {
        color: var(--text-primary);
        font-weight: 600;
        font-size: 1.1rem;
    }

    .user-title {
        color: var(--text-secondary);
        font-size: 0.9rem;
        margin-top: 2px;
    }

    .post-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 10px;
    }

    .post-time {
        color: var(--text-muted);
        font-size: 0.9rem;
    }

    .post-badges {
        display: flex;
        gap: 8px;
    }

    .badge {
        padding: 4px 8px;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
    }

        .badge.saved {
            background: rgba(40, 167, 69, 0.1);
            color: var(--success-color);
        }

        .badge.edited {
            background: rgba(255, 193, 7, 0.1);
            color: var(--warning-color);
        }

        .badge.archived {
            background: rgba(108, 117, 125, 0.1);
            color: var(--text-secondary);
        }

    /* Post Content */
    .post-content {
        padding: 20px;
    }

    .post-text {
        color: var(--text-primary);
        font-size: 1rem;
        margin-bottom: 15px;
        white-space: pre-wrap;
    }

    /* Image Gallery */
    .image-gallery {
        margin: 15px 0;
    }

    .image-count-badge {
        display: inline-block;
        background: var(--primary-color);
        color: white;
        padding: 5px 10px;
        border-radius: 15px;
        font-size: 0.8rem;
        margin-bottom: 10px;
    }

    .images-grid {
        display: grid;
        gap: 8px;
        border-radius: 8px;
        overflow: hidden;
    }

        .images-grid.single {
            grid-template-columns: 1fr;
        }

        .images-grid.double {
            grid-template-columns: 1fr 1fr;
        }

        .images-grid.triple {
            grid-template-columns: 2fr 1fr;
            grid-template-rows: 1fr 1fr;
        }

        .images-grid.multiple {
            grid-template-columns: 1fr 1fr;
            grid-template-rows: 1fr 1fr;
        }

        .images-grid.triple .post-image:first-child {
            grid-row: 1 / 3;
        }

    .post-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        cursor: pointer;
        transition: transform 0.3s ease;
        position: relative;
    }

        .post-image:hover {
            transform: scale(1.02);
        }

    .images-grid.multiple .post-image:last-child {
        position: relative;
    }

    .more-images-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.7);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
        font-weight: 600;
    }

    /* Post Engagement */
    .post-engagement {
        padding: 15px 20px;
        border-top: 1px solid var(--border-color);
        background: var(--bg-secondary);
    }

    .reactions-section {
        margin-bottom: 15px;
    }

    .reactions-summary {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
    }

    .reaction-counts {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
    }

    .reaction-item {
        display: flex;
        align-items: center;
        gap: 5px;
        color: var(--text-secondary);
        font-size: 0.9rem;
    }

    .reaction-emoji {
        font-size: 1.1rem;
    }

    .engagement-stats {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 0;
        color: var(--text-secondary);
        font-size: 0.9rem;
    }

    .stat-item {
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .stat-icon {
        font-size: 1rem;
    }

    /* Comments Section */
    .comments-section {
        border-top: 1px solid var(--border-color);
        padding: 15px 20px;
    }

    .comments-header {
        display: flex;
        justify-content: between;
        align-items: center;
        margin-bottom: 15px;
        color: var(--text-primary);
        font-weight: 600;
    }

    .comment-item {
        padding: 10px 0;
        border-bottom: 1px solid var(--border-color);
    }

        .comment-item:last-child {
            border-bottom: none;
        }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: var(--text-secondary);
    }

    .empty-icon {
        font-size: 4rem;
        margin-bottom: 20px;
        opacity: 0.5;
    }

    .empty-title {
        font-size: 1.5rem;
        margin-bottom: 10px;
        color: var(--text-primary);
    }

    .empty-description {
        font-size: 1rem;
        max-width: 400px;
        margin: 0 auto;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .container

    {
        padding: 15px;
    }

    .page-title {
        font-size: 2rem;
    }

    .post-meta {
        flex-direction: column;
        align-items: flex-start;
    }

    .tabs {
        flex-direction: column;
    }

    .tab {
        border-bottom: 1px solid var(--border-color);
        border-radius: 0;
    }

    .images-grid.triple,
    .images-grid.multiple {
        grid-template-columns: 1fr;
        grid-template-rows: auto;
    }

        .images-grid.triple .post-image:first-child {
            grid-row: auto;
        }

    .reaction-counts {
        justify-content: center;
    }

    .engagement-stats {
        flex-wrap: wrap;
        gap: 10px;
    }

    }

    @@media (max-width: 480px) {
        .user-details h4

    {
        font-size: 1rem;
    }

    .post-text {
        font-size: 0.95rem;
    }

    .post-image {
        height: 150px;
    }

    }
</style>

<div class="container">
    <div class="page-header">
        <h1 class="page-title">📚 My Saved Posts</h1>
        <p class="page-subtitle">Keep track of your favorite content</p>
    </div>

    <div class="tabs-container">
        <div class="tabs">
            <button class="tab active" onclick="showTab('saved')">
                💾 Saved Posts (@Model.Count(p => !p.IsArchived))
            </button>
            <button class="tab" onclick="showTab('archived')">
                🗄️ Archived Posts (@Model.Count(p => p.IsArchived))
            </button>
        </div>
    </div>

    <!-- Saved Posts Tab -->
    <div id="saved-tab" class="tab-content active">
        @if (Model.Any(p => !p.IsArchived))
        {
            <div class="posts-container">
                @foreach (var post in Model.Where(p => !p.IsArchived))
                {
                    <div class="post-card">
                        <!-- Post Header -->
                        <div class="post-header">
                            <div class="post-user-info">
                                <img src="@post.PostUserImg" alt="@post.PostUserName" class="user-avatar"
                                     onerror="this.src='data:image/svg+xml;base64,'">
                                <div class="user-details">
                                    <h4>@post.PostUserName</h4>
                                    @if (!string.IsNullOrEmpty(post.PostUserTitle))
                                    {
                                        <div class="user-title">@post.PostUserTitle</div>
                                    }
                                </div>
                            </div>
                            <div class="post-meta">
                                <span class="post-time">@post.Since.Days days ago</span>
                                <div class="post-badges">
                                    @if (post.IsSavedByCurrentUser)
                                    {
                                        <span class="badge saved">Saved</span>
                                    }
                                    @if (post.IsEdited)
                                    {
                                        <span class="badge edited">Edited</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Post Content -->
                        <div class="post-content">
                            @if (!string.IsNullOrEmpty(post.TextContent))
                            {
                                <div class="post-text">@post.TextContent</div>
                            }

                            <!-- Image Gallery -->
                            @if (post.Images != null && post.Images.Any())
                            {
                                <div class="image-gallery">
                                    @if (post.imageCount > 0)
                                    {
                                        <span class="image-count-badge">📷 @post.imageCount @(post.imageCount == 1 ? "image" : "images")</span>
                                    }

                                    <div class="images-grid @GetImageGridClass(post.Images.Count)">
                                        @for (int i = 0; i < Math.Min(post.Images.Count, 4); i++)
                                        {
                                            <img src="@post.Images[i]" alt="Post image @(i + 1)" class="post-image"
                                                 onclick="openImageModal('@post.Images[i]')">

                                            @if (i == 3 && post.Images.Count > 4)
                                            {
                                                <div class="more-images-overlay">
                                                    +@(post.Images.Count - 3)
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Post Engagement -->
                        <div class="post-engagement">
                            @if (post.ReactionCount > 0)
                            {
                                <div class="reactions-section">
                                    <div class="reactions-summary">
                                        <div class="reaction-counts">
                                            @if (post.LikeCount > 0)
                                            {
                                                <div class="reaction-item">
                                                    <span class="reaction-emoji">👍</span>
                                                    <span>@post.LikeCount</span>
                                                </div>
                                            }
                                            @if (post.LoveCount > 0)
                                            {
                                                <div class="reaction-item">
                                                    <span class="reaction-emoji">❤️</span>
                                                    <span>@post.LoveCount</span>
                                                </div>
                                            }
                                            @if (post.LaughCount > 0)
                                            {
                                                <div class="reaction-item">
                                                    <span class="reaction-emoji">😂</span>
                                                    <span>@post.LaughCount</span>
                                                </div>
                                            }
                                            @if (post.SadCount > 0)
                                            {
                                                <div class="reaction-item">
                                                    <span class="reaction-emoji">😢</span>
                                                    <span>@post.SadCount</span>
                                                </div>
                                            }
                                            @if (post.AngryCount > 0)
                                            {
                                                <div class="reaction-item">
                                                    <span class="reaction-emoji">😠</span>
                                                    <span>@post.AngryCount</span>
                                                </div>
                                            }
                                        </div>
                                        <div class="total-reactions">@post.ReactionCount total</div>
                                    </div>
                                </div>
                            }

                            <div class="engagement-stats">
                                @if (post.CommentsCount > 0)
                                {
                                    <div class="stat-item">
                                        <span class="stat-icon">💬</span>
                                        <span>@post.CommentsCount @(post.CommentsCount == 1 ? "comment" : "comments")</span>
                                    </div>
                                }
                                @if (post.NumberOfShares > 0)
                                {
                                    <div class="stat-item">
                                        <span class="stat-icon">🔗</span>
                                        <span>@post.NumberOfShares @(post.NumberOfShares == 1 ? "share" : "shares")</span>
                                    </div>
                                }
                                <div class="stat-item">
                                    <span class="stat-icon">📅</span>
                                    <span>@post.CreatedAt.ToString("MMM dd, yyyy")</span>
                                </div>
                            </div>
                        </div>

                        <!-- Comments Section -->
                        @if (post.Comments != null && post.Comments.Any())
                        {
                            <div class="comments-section">
                                <div class="comments-header">
                                    💬 Comments (@post.CommentsCount)
                                </div>
                                @foreach (var comment in post.Comments.Take(3))
                                {
                                    <div class="comment-item">
                                        <!-- You can expand this based on CommentCreateMV properties -->
                                        <div style="color: var(--text-secondary); font-size: 0.9rem;">
                                            Recent comment...
                                        </div>
                                    </div>
                                }
                                @if (post.Comments.Count > 3)
                                {
                                    <div style="text-align: center; margin-top: 10px; color: var(--primary-color); cursor: pointer;">
                                        View all @post.CommentsCount comments...
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-icon">🔖</div>
                <h3 class="empty-title">No Saved Posts Yet</h3>
                <p class="empty-description">
                    Start saving posts you love to see them here. Your saved content will be easily accessible whenever you need it.
                </p>
            </div>
        }
    </div>

    <!-- Archived Posts Tab -->
    <div id="archived-tab" class="tab-content">
        @if (Model.Any(p => p.IsArchived))
        {
            <div class="posts-container">
                @foreach (var post in Model.Where(p => p.IsArchived))
                {
                    <div class="post-card" style="opacity: 0.8;">
                        <!-- Similar structure as above but with archived styling -->
                        <div class="post-header">
                            <div class="post-user-info">
                                <img src="@post.PostUserImg" alt="@post.PostUserName" class="user-avatar"
                                     onerror="this.src='data:image/svg+xml;base64,'">
                                <div class="user-details">
                                    <h4>@post.PostUserName</h4>
                                    @if (!string.IsNullOrEmpty(post.PostUserTitle))
                                    {
                                        <div class="user-title">@post.PostUserTitle</div>
                                    }
                                </div>
                            </div>
                            <div class="post-meta">
                                <span class="post-time">@post.Since.Days days ago</span>
                                <div class="post-badges">
                                    <span class="badge archived">Archived</span>
                                    @if (post.IsEdited)
                                    {
                                        <span class="badge edited">Edited</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <!-- Rest of the post content similar to saved posts -->
                        <div class="post-content">
                            @if (!string.IsNullOrEmpty(post.TextContent))
                            {
                                <div class="post-text">@post.TextContent</div>
                            }
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-icon">🗄️</div>
                <h3 class="empty-title">No Archived Posts</h3>
                <p class="empty-description">
                    Posts you archive will appear here. Archive posts to declutter your saved items while keeping them accessible.
                </p>
            </div>
        }
    </div>
</div>

<script>
    function showTab(tabName) {
        // Hide all tab contents
        const tabContents = document.querySelectorAll('.tab-content');
        tabContents.forEach(content => content.classList.remove('active'));

        // Remove active class from all tabs
        const tabs = document.querySelectorAll('.tab');
        tabs.forEach(tab => tab.classList.remove('active'));

        // Show selected tab content
        document.getElementById(tabName + '-tab').classList.add('active');

        // Add active class to selected tab
        event.target.classList.add('active');
    }

    function openImageModal(imageSrc) {
        // Create modal overlay
        const modal = document.createElement('div');
        modal.style.cssText = `
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.9);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 1000;
            cursor: pointer;
        `;

        // Create image
        const img = document.createElement('img');
        img.src = imageSrc;
        img.style.cssText = `
            max-width: 90%;
            max-height: 90%;
            border-radius: 8px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
        `;

        modal.appendChild(img);
        document.body.appendChild(modal);

        // Close modal on click
        modal.addEventListener('click', () => {
            document.body.removeChild(modal);
        });

        // Prevent body scroll
        document.body.style.overflow = 'hidden';

        // Restore body scroll when modal closes
        modal.addEventListener('click', () => {
            document.body.style.overflow = 'auto';
        });
    }

    @{
        string GetImageGridClass(int imageCount)
        {
            return imageCount switch
            {
                1 => "single",
                2 => "double",
                3 => "triple",
                _ => "multiple"
            };
        }
    }
</script>