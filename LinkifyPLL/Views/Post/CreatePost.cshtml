@model LinkifyBLL.ModelView.PostCreateMV

@{
    ViewData["Title"] = "Create Post";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}

<form asp-action="CreatePost" enctype="multipart/form-data" id="postForm" style="margin-top: 70px;">
    <!-- Text Content -->
    <textarea asp-for="TextContent" class="form-control" placeholder="What's on your mind?" rows="4" style="margin-bottom:10px;"></textarea>

    <!-- File Upload Buttons -->
    <div class="d-flex gap-2 mb-3">
        <label class="btn btn-outline-primary btn-sm">
            <i class="fas fa-image me-1"></i> Photo
            <input type="file" asp-for="Images" multiple accept="image/*" class="d-none" id="imageUpload">
        </label>
    </div>

    <!-- File Previews Container - Initially hidden -->
    <div id="filePreviews" class="file-previews mt-3 row" style="display: none;"></div>

    <!-- Submit Button -->
    <button type="submit" class="btn btn-primary mt-3">Post</button>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Track all selected files
            let selectedFiles = [];
            const $filePreviews = $('#filePreviews');
            const $imageUpload = $('#imageUpload');

            // Handle image upload and preview
            $imageUpload.change(function(e) {
                const files = Array.from(e.target.files);
                selectedFiles = selectedFiles.concat(files);
                updatePreviews();
                updateFileInput();
            });

            // Update previews display
            function updatePreviews() {
                $filePreviews.empty();

                if (selectedFiles.length > 0) {
                    $filePreviews.show();

                    selectedFiles.forEach((file, index) => {
                        if (!file.type.match('image.*')) return;

                        const reader = new FileReader();
                        reader.onload = function(e) {
                            $filePreviews.append(`
                                <div class="col-md-3 mb-3 image-preview">
                                    <div class="card">
                                        <img src="${e.target.result}" class="card-img-top" style="height: 150px; object-fit: cover;">
                                        <div class="card-body p-2">
                                            <p class="card-text small mb-1">${file.name}</p>
                                            <p class="card-text small text-muted">${(file.size/1024).toFixed(2)} KB</p>
                                            <button class="btn btn-sm btn-danger remove-image" data-index="${index}">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            `);
                        }
                        reader.readAsDataURL(file);
                    });
                } else {
                    $filePreviews.hide();
                }
            }

            // Update the actual file input
            function updateFileInput() {
                const dataTransfer = new DataTransfer();
                selectedFiles.forEach(file => dataTransfer.items.add(file));
                $imageUpload[0].files = dataTransfer.files;
            }

            // Remove preview handler
            $(document).on('click', '.remove-image', function() {
                const index = $(this).data('index');
                selectedFiles.splice(index, 1);
                updatePreviews();
                updateFileInput();
            });
        });
    </script>
}

<style>
    .file-previews {
        min-height: 100px;
    }

    .image-preview .card-img-top {
        max-height: 150px;
        object-fit: contain;
    }

    .card {
        height: 100%;
    }

    .remove-image {
        position: absolute;
        top: 5px;
        right: 5px;
        padding: 0.25rem 0.5rem;
        font-size: 0.75rem;
    }
</style>