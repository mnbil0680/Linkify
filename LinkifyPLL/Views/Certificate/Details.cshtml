@using LinkifyDAL.Enums
@model LinkifyBLL.ModelView.CertificateMV

@{
    ViewData["Title"] = "Certificate Details";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5 fw-bold text-primary">@ViewData["Title"]</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="card shadow-sm border-0 overflow-hidden">
        <div class="card-header bg-white border-bottom-0 pb-0">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="h4 mb-0 text-primary">
                    <i class="fas fa-certificate me-2"></i>@Model.Name
                </h2>
                <span class="badge rounded-pill @(Model.Status == CertificateStatus.Active ? "bg-success" : "bg-warning text-dark")">
                    @Model.Status.ToString()
                </span>
            </div>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="detail-item mb-3">
                        <h6 class="text-muted mb-1">Issuing Organization</h6>
                        <p class="fs-5">@Model.IssuingOrganization</p>
                    </div>

                    <div class="detail-item mb-3">
                        <h6 class="text-muted mb-1">Issue Date</h6>
                        <p class="fs-5">
                            <i class="far fa-calendar-alt me-2 text-muted"></i>
                            @Model.IssueDate?.ToString("yyyy-MM-dd")
                        </p>
                    </div>

                    <div class="detail-item mb-3">
                        <h6 class="text-muted mb-1">Credential ID</h6>
                        <p class="fs-5">@(Model.CredentialId ?? "N/A")</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="detail-item mb-3">
                        <h6 class="text-muted mb-1">Expiration Date</h6>
                        <p class="fs-5">
                            @if (Model.ExpirationDate.HasValue)
                            {
                                <i class="far fa-calendar-alt me-2 text-muted"></i>
                                @Model.ExpirationDate?.ToString("yyyy-MM-dd")
                            }
                            else
                            {
                                <span>N/A</span>
                            }
                        </p>
                    </div>

                    <div class="detail-item mb-3">
                        <h6 class="text-muted mb-1">Certificate File</h6>
                        @if (!string.IsNullOrEmpty(Model.CertificatePath))
                        {
                            <a href="@Model.CertificatePath" target="_blank" class="btn btn-primary">
                                <i class="fas fa-file-pdf me-2"></i>View Certificate
                            </a>
                        }
                        else
                        {
                            <p class="text-muted">No certificate file available</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer bg-white border-top-0 pt-0">
            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                    <i class="fas fa-edit me-2"></i>Edit
                </a>
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-outline-danger">
                        <i class="fas fa-trash-alt me-2"></i>Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 0.75rem;
    }

    .detail-item {
        padding: 1rem;
        background-color: #f8f9fa;
        border-radius: 0.5rem;
    }

        .detail-item h6 {
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

    .card-header {
        padding: 1.5rem 1.5rem 0;
    }

    .card-footer {
        padding: 0 1.5rem 1.5rem;
    }
</style>