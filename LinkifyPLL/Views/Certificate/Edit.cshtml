@using LinkifyDAL.Enums
@model LinkifyBLL.ModelView.CertificateMV

@{
    ViewData["Title"] = "Edit Certificate";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-0 pb-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h1 class="h3 fw-bold text-primary mb-0">@ViewData["Title"]</h1>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" enctype="multipart/form-data" method="post" class="needs-validation" novalidate>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="CertificatePath" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Name" class="form-control" placeholder=" " />
                                    <label asp-for="Name" class="form-label"></label>
                                    <span asp-validation-for="Name" class="invalid-feedback"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="IssuingOrganization" class="form-control" placeholder=" " />
                                    <label asp-for="IssuingOrganization" class="form-label"></label>
                                    <span asp-validation-for="IssuingOrganization" class="invalid-feedback"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="IssueDate" type="date" class="form-control" placeholder=" " />
                                    <label asp-for="IssueDate" class="form-label"></label>
                                    <span asp-validation-for="IssueDate" class="invalid-feedback"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="ExpirationDate" type="date" class="form-control" placeholder=" " />
                                    <label asp-for="ExpirationDate" class="form-label"></label>
                                    <span asp-validation-for="ExpirationDate" class="invalid-feedback"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="CredentialId" class="form-control" placeholder=" " />
                                    <label asp-for="CredentialId" class="form-label"></label>
                                    <span asp-validation-for="CredentialId" class="invalid-feedback"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="CredentialUrl" class="form-control" placeholder=" " />
                                    <label asp-for="CredentialUrl" class="form-label"></label>
                                    <span asp-validation-for="CredentialUrl" class="invalid-feedback"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="Status" asp-items="Html.GetEnumSelectList<CertificateStatus>()" class="form-select"></select>
                                    <label asp-for="Status" class="form-label"></label>
                                    <span asp-validation-for="Status" class="invalid-feedback"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="mb-3">
                                    <label class="form-label d-block">
                                        Certificate File
                                        <small class="text-muted float-end">Max size: 10MB</small>
                                    </label>

                                    @if (!string.IsNullOrEmpty(Model.CertificatePath))
                                    {
                                        <div class="mb-3">
                                            <a href="@Model.CertificatePath" target="_blank" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-file-pdf me-2"></i>View Current Certificate
                                            </a>
                                        </div>
                                    }

                                    <div class="file-upload-wrapper">
                                        <input asp-for="Certificate" type="file" class="form-control" accept=".pdf,.jpg,.jpeg,.png" />
                                        <div class="file-upload-info">
                                            <span class="file-name">No file chosen</span>
                                            <button type="button" class="btn btn-sm btn-outline-secondary">Browse</button>
                                        </div>
                                    </div>
                                    <span asp-validation-for="Certificate" class="invalid-feedback d-block"></span>
                                    <small class="form-text text-muted">Leave blank to keep current file. Accepted formats: PDF, JPG, PNG</small>
                                </div>
                            </div>

                            <div class="col-12 mt-4">
                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-action="Index" class="btn btn-lg btn-outline-secondary px-4">Cancel</a>
                                    <button type="submit" class="btn btn-lg btn-primary px-4">
                                        <i class="fas fa-save me-2"></i>Save Changes
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <style>
        .file-upload-wrapper {
            position: relative;
            margin-bottom: 1rem;
        }

            .file-upload-wrapper input[type="file"] {
                position: absolute;
                left: 0;
                top: 0;
                width: 100%;
                height: 100%;
                opacity: 0;
                cursor: pointer;
                z-index: 2;
            }

        .file-upload-info {
            display: flex;
            align-items: center;
            border: 1px solid #dee2e6;
            border-radius: 0.375rem;
            padding: 0.375rem 0.75rem;
            background-color: #f8f9fa;
        }

        .file-name {
            flex-grow: 1;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            padding-right: 1rem;
        }

        .form-floating > label {
            color: #6c757d;
        }

        .card {
            border-radius: 0.75rem;
        }
    </style>

    <script>
        // Enhanced file input handling
        $(document).ready(function() {
            $('input[type="file"]').on('change', function() {
                var fileName = $(this).val().split('\\').pop();
                var $fileInfo = $(this).siblings('.file-upload-info');

                if (fileName) {
                    $fileInfo.find('.file-name').text(fileName);
                } else {
                    $fileInfo.find('.file-name').text('No file chosen');
                }
            });

            // Add Bootstrap's validation classes
            $('.needs-validation').on('submit', function(e) {
                if (!this.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                }
                $(this).addClass('was-validated');
            });
        });
    </script>
}