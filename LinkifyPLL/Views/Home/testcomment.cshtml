<h2>Write a Comment</h2>

<form asp-controller="Comment" asp-action="TestComment" method="post">
    <div class="mb-3">
        <label for="CommentText" class="form-label">Comment</label>
        <textarea class="form-control" id="CommentText" name="CommentText" rows="3" required></textarea>
    </div>
    <div class="mb-3">
        <label for="PostId" class="form-label">Post Id</label>
        <input type="number" class="form-control" id="PostId" name="PostId" required />
    </div>
    <div class="mb-3">
        <label for="CommenterId" class="form-label">Commenter Id</label>
        <input type="text" class="form-control" id="CommenterId" name="CommenterId" required />
    </div>
    <button type="submit" class="btn btn-primary">Submit Comment</button>
</form>

